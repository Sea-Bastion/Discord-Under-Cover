<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Scene?>

<Scene xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" height="20" width="100">
    <StackPane>
        <HBox>
            <TextField promptText="Message" fx:id="TextBox" prefWidth="Infinity" prefHeight="Infinity"/>
            <Button onAction="#Send" text="Send" onKeyPressed="#Input" prefHeight="Infinity"/>
        </HBox>

    </StackPane>
</Scene>
